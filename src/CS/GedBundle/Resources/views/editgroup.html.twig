{% extends "GedBundle::layout.html.twig" %}
{% block body %}
<form action="{{ path('ged_editgroup',{ 'id': id } ) }}" method="post" class="col-md-6">
	<label for="groupname">Modifier le nom du groupe</label>
	<input name="groupname"/>
	<input type="submit" value="valider"/>
</form>
<form action="{{ path('ged_editgroup',{ 'id': id } ) }}" method="post" class="col-md-6">
	<label for="useradd">Ajouter un utilisateur au groupe</label>
	<input name="useradd"/>
	<input type="submit" value="valider"/>
</form>
<form action="{{ path('ged_editgroup',{ 'id': id } ) }}" method="post" class="col-md-6">
	<label for="groupremove">Supprimer le groupe</label>
	<input name="groupremove"/>
	<input type="submit" value="valider"/>
</form>
<form action="{{ path('ged_editgroup',{ 'id': id } ) }}" method="post" class="col-md-6">
	<label for="userremove">Supprimer un utilisateur du groupe</label>
	<input name="userremove"/>
	<input type="submit" value="valider"/>
</form>
{% endblock %}