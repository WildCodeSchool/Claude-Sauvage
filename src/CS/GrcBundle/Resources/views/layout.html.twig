<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/stylesheet.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('https://cdn.datatables.net/1.10.12/css/jquery.dataTables.css') }}">
  
        <script type="text/javascript" src="{{ asset('js/jquery-2.2.3.min.js') }}" ></script>
        <script type="text/javascript" src="{{ asset('js/bootstrap.min.js') }}" ></script>
        <script type="text/javascript" charset="utf8" src="{{ asset('https://cdn.datatables.net/1.10.12/js/jquery.dataTables.js') }}"></script>   
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body>
            <nav class="navbar navbar-default navbarbottom1">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                      </button>
                    </div>
            
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                      <ul class="nav navbar-nav navbar-left">
                          {% if is_granted('ROLE_COM') %}
                          <li>
                          <a href="{{ path('grc_homepage')}}"><button type="button" class="ajout-fichier btn btn-default navbar-btn" data-toggle="" data-target="#addfile"><span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home</button></a>
                          </li>
                          {% endif %}
                          {% if is_granted('ROLE_CLI') %}
                          <li>
                          <a href="{{ path('grc_fiche_client', { 'id': userid }) }}"><button type="button" class="ajout-fichier btn btn-default navbar-btn" data-toggle="" data-target="#addfile"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Home</button></a>
                          </li>
                          {% endif %}
                          {% if is_granted('ROLE_COM') %}
                          <li>
                          <a href="{{ path('grc_create_cat') }}"><button type="button" class="ajout-fichier btn btn-default navbar-btn" data-toggle="modal" data-target="#addfile"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>  Create cat√©gory</button></a>
                          </li>
                          {% endif %}
                          {% if is_granted('ROLE_CLI') %}
                          <li>
                          <a href="{{ path('grc_create_ticket') }}"><button type="button" class="btn btn-default navbar-btn" data-toggle="modal" data-target="#addfile"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>  Create ticket</button>
                          </li></a>                       
                          {% endif %}
                          {% if is_granted('ROLE_COM') %}
                          <li>
                          <a href="{{ path('liste') }}"><button type="button" class="ajout-fichier btn btn-default navbar-btn" data-toggle="modal" data-target="#addfile"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> All tickets</button>
                          </li></a> 
                          {% endif %}
                      </ul>
                      <ul class="nav navbar-nav navbar-right">
                        <li><a id="username" href="#">Bienvenue {{username}}</a></li>
                        <li><img id = "profilepic" src="{{ asset('img/profile.png') }}"></li>
                        <li>
                              <a class"btn btn-default" type="button" id ="logout" href="{{ path('user_logout')}}">LOGOUT</a>
                        </li>
                      </ul>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav> 
            {% block body %}
            {% endblock %}
        </br>
    </body>
</html>