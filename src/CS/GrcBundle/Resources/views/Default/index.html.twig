								<td>{{ commentedticket['priority'] }}</td>
							</tr>
						{% endfor %}
					{% endif %}
					<tr>
						<td>5</td>
						<td>Pièce manquante</td>
						<td>Claude Sauvage</td>
						<td>28/06/16</td>
						<td>Urgent</td>
					</tr>
		   		</tbody>
			</table>
		</div>
	</div>
</div>
<script type="text/javascript"> 
    $(document).ready(function() { 
        $('.tab1').DataTable( {
            "paging": false,
            "ordering": false, 
            "info": false, 
            "sDom": '<"H"lr>t<"F"ip>' 
        }); 
    });
</script>
{% endblock %}

